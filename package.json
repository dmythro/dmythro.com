{
  "name": "dmythro-com",
  "packageManager": "bun@1.3.3",
  "private": false,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:clean": "turbo build --cache=local:r,remote:r",
    "build:force": "turbo build --force",
    "bump": "bun update -i -r",
    "check-types": "turbo check-types",
    "clean-up": "find . -type d \\( -name \"node_modules\" -o -name \".next\" -o -name \".turbo\" -o -name \"dist\" -o -name \".cache\" -o -name \".swc\" -o -name \".tsbuildinfo\" \\) -exec rm -rf {} + 2>/dev/null || true && find . -type f -name \"*.tsbuildinfo\" -delete 2>/dev/null || true",
    "ci": "biome ci .",
    "clean": "turbo clean",
    "cv": "turbo cv --force",
    "dev": "turbo dev",
    "check": "biome check .",
    "check-apply": "biome check --write --unsafe .",
    "lint": "biome lint .",
    "start": "turbo start"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "turbo": "2.7.4"
  },
  "dependencies": {
    "@types/bun": "1.3.5",
    "tailwindcss": "4.1.18"
  },
  "overrides": {
    "mdast-util-to-hast": ">=13.2.1",
    "@babel/helpers": ">=7.26.10",
    "@babel/runtime": ">=7.26.10",
    "glob": ">=10.5.0",
    "brace-expansion": ">=2.0.2",
    "js-yaml": ">=4.1.1"
  }
}
