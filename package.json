{
  "name": "dmythro-com",
  "packageManager": "bun@1.2.4",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "build": "turbo build",
    "bump": "bunx npm-check-updates --root --workspaces -u",
    "check-types": "turbo check-types",
    "ci": "biome ci .",
    "clean": "turbo clean",
    "cv": "turbo cv",
    "dev": "turbo dev",
    "check": "biome check .",
    "check-apply": "biome check --write --unsafe .",
    "lint": "biome lint .",
    "start": "turbo start"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "turbo": "2.4.4"
  },
  "dependencies": {
    "@types/bun": "1.2.4"
  }
}
